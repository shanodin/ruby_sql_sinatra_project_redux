<h1>Update <%= @owner.name %>'s details</h1>

<form method="POST" action="/owners/<%= @owner.id %>">

  <label for="name">Name:</label>
  <input type="text" name="name" id="name" value="<%= @owner.name %>"/>

  <label for="phone_number">Phone Number:</label>
  <input type="number" name="phone_number" id="phone_number" value="<%= @owner.phone_number %>" />

  <input type="submit" value="Update Owner Details"/>

</form>
